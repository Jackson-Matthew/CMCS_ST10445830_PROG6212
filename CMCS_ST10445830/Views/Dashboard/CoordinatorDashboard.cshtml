@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="hero d-flex flex-column align-items-center justify-content-center text-center">

    <div class="d-inline-block px-4 py-2 rounded mb-5"
         style="background-color: rgba(255, 255, 255, 0.7);">
        <h1 class="text-dark display-3 fw-bold">Welcome, Academic Coordinators!</h1>
    </div>

    <div class="row w-75">
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Manage Approvals</h5>
                    <p class="card-text text-muted">Manage Lecturer Approvals here.</p>
                    <a asp-controller="Manage Approvals" asp-action="Index"
                       class="btn btn-outline-primary mt-3">Go</a>
                </div>
            </div>
        </div> 
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-shopping-cart fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">View Claim Status</h5>
                    <p class="card-text text-muted">View the status of lecturer claims.</p>
                    <a asp-controller="View Claim Status" asp-action="Index"
                       class="btn btn-outline-primary mt-3">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/Coord-image.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        width: 100%;
        padding: 2rem 0;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }
</style>
