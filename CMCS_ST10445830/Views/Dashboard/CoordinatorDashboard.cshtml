@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="hero d-flex flex-column align-items-center justify-content-center text-center">
    <div class="d-inline-block px-4 py-2 rounded mb-5"
         style="background-color: rgba(255, 255, 255, 0.7);">
        <h1 class="text-dark display-3 fw-bold">Welcome, Academic Coordinator!</h1>
        <p class="lead text-dark mb-0">Manage lecturer claims and approvals</p>
    </div>

    <div class="row w-75">
        <!-- Pending Claims Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Pending Claims</h5>
                    <p class="card-text text-muted">Review and approve pending lecturer claims</p>
                    <a asp-controller="Claims" asp-action="Manage"
                       class="btn btn-outline-warning mt-3">Manage Approvals</a>
                </div>
            </div>
        </div>

        <!-- All Claims Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-list-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">All Claims</h5>
                    <p class="card-text text-muted">View all submitted claims and their status</p>
                    <a asp-controller="Claims" asp-action="ViewAll"
                       class="btn btn-outline-primary mt-3">View All Claims</a>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-chart-bar fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text text-muted">View claim statistics and reports</p>
                    <a asp-controller="Claims" asp-action="ViewAll"
                       class="btn btn-outline-success mt-3">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/CoordGradient1.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        width: 100%;
        padding: 2rem 0;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }
</style>