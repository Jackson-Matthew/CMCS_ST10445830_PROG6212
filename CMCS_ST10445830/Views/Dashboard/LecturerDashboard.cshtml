@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="hero d-flex flex-column align-items-center justify-content-center text-center">
    <div class="d-inline-block px-4 py-2 rounded mb-5"
         style="background-color: rgba(255, 255, 255, 0.7);">
        <h1 class="text-dark display-3 fw-bold">Welcome, Lecturer!</h1>
        <p class="lead text-dark mb-0">Manage your claims and track their status</p>
    </div>

    <div class="row w-75">
        <!-- Submit Claim Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-plus-circle fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Submit New Claim</h5>
                    <p class="card-text text-muted">Submit a new timesheet claim for approval</p>
                    <a asp-controller="Claims" asp-action="Create"
                       class="btn btn-outline-success mt-3">Submit Claim</a>
                </div>
            </div>
        </div>

        <!-- My Claims Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-history fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">My Claims</h5>
                    <p class="card-text text-muted">View the status of your submitted claims</p>
                    <a asp-controller="Claims" asp-action="Index"
                       class="btn btn-outline-primary mt-3">View My Claims</a>
                </div>
            </div>
        </div>

        <!-- Quick Stats Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Claim History</h5>
                    <p class="card-text text-muted">Track your claim history and patterns</p>
                    <a asp-controller="Claims" asp-action="Index"
                       class="btn btn-outline-info mt-3">View History</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/LecturerGradient1.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        width: 100%;
        padding: 2rem 0;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }
</style>