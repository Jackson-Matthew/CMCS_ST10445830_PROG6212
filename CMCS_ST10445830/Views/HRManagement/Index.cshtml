@model IEnumerable<CMCS_ST10445830.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog"></i> User Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New User
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hourly Rate</th>
                            <th>Profile Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>
                                    @if (user.UserProfile != null)
                                    {
                                        @($"{user.UserProfile.FirstName} {user.UserProfile.LastName}")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No profile</span>
                                    }
                                </td>
                                <td>
                                    @if (user.UserProfile != null)
                                    {
                                        @user.UserProfile.Email
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                            </td>
                            <td>
                                <span class="badge
                                        @(user.Role == "Lecturer" ? "bg-primary" :
                                                                                user.Role == "Academic coordinator" ? "bg-warning text-dark" : "bg-info")">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                @if (user.UserProfile != null)
                                    {
                                        @user.UserProfile.HourlyRate.ToString("C")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (user.UserProfile != null)
                                    {
                                        <span class="badge bg-success">Complete</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Incomplete</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Dashboard" asp-action="HRDashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>