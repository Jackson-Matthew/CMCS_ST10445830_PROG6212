@model IEnumerable<CMCS_ST10445830.Models.Claim>

@{
    ViewData["Title"] = "Manage Claim Approvals";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white mb-0">
                <i class="fas fa-clipboard-check"></i> Manage Claim Approvals
            </h2>
            <a asp-controller="Dashboard" asp-action="CoordinatorDashboard" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="card shadow-lg border-0">
                <div class="card-body text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Pending Claims</h4>
                    <p class="text-muted">There are no claims waiting for approval at the moment.</p>
                    <a asp-action="ViewAll" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i> View All Claims
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-clock me-2"></i> Pending Claims (@Model.Count())
                        </h5>
                        <div>
                            <a asp-action="ViewAll" class="btn btn-sm btn-outline-light">
                                <i class="fas fa-list me-2"></i> View All Claims
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Lecturer</th>
                                    <th>Hours</th>
                                    <th>Rate</th>
                                    <th>Total Amount</th>
                                    <th>Document</th>
                                    <th>Submitted</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model.OrderByDescending(c => c.SubmittedAt))
                                {
                                    <tr>
                                        <td>
                                            <strong>@(claim.Lecturer?.Username ?? "Unknown Lecturer")</strong>
                                            <br />
                                            <small class="text-muted">ID: #@claim.Id</small>
                                        </td>
                                        <td>@claim.HoursWorked</td>
                                        <td>@claim.HourlyRate.ToString("C")</td>
                                        <td>
                                            <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(claim.DocumentationPath))
                                            {
                                                <a href="/documents/@claim.DocumentationPath" target="_blank"
                                                   class="btn btn-sm btn-outline-primary" title="View Document">
                                                    <i class="fas fa-file me-1"></i> View
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No document</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @claim.SubmittedAt.ToString("MMM dd, yyyy")
                                                <br />
                                                @claim.SubmittedAt.ToString("hh:mm tt")
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group-vertical btn-group-sm" role="group">
                                                <a asp-action="Approve" asp-route-id="@claim.Id"
                                                   class="btn btn-success btn-sm"
                                                   title="Approve Claim"
                                                   onclick="return confirm('Are you sure you want to APPROVE this claim?')">
                                                    <i class="fas fa-check me-1"></i> Approve
                                                </a>
                                                <a asp-action="Reject" asp-route-id="@claim.Id"
                                                   class="btn btn-danger btn-sm mt-1"
                                                   title="Reject Claim"
                                                   onclick="return confirm('Are you sure you want to REJECT this claim?')">
                                                    <i class="fas fa-times me-1"></i> Reject
                                                </a>
                                                <a asp-action="Details" asp-route-id="@claim.Id"
                                                   class="btn btn-info btn-sm mt-1"
                                                   title="View Details">
                                                    <i class="fas fa-eye me-1"></i> Details
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hero {
        background: url('/Images/coord view claims.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .btn-group-vertical .btn {
        margin: 2px 0;
        text-align: left;
    }

    .table td {
        vertical-align: middle;
    }
</style>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}