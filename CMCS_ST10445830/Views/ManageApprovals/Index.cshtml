@model IEnumerable<CMCS_ST10445830.Models.Claim>

@{
    ViewData["Title"] = "Manage Claim Approvals";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white mb-0">
                <i class="fas fa-clipboard-check"></i> Manage Claim Approvals
            </h2>
            <a asp-controller="Dashboard" asp-action="CoordinatorDashboard" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="card shadow-lg border-0">
                <div class="card-body text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Pending Claims</h4>
                    <p class="text-muted">There are no claims waiting for approval at the moment.</p>
                    <a asp-action="AllClaims" class="btn btn-primary">
                        <i class="fas fa-list"></i> View All Claims
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-clock"></i> Pending Claims (@Model.Count())
                        </h5>
                        <div>
                            <a asp-action="AllClaims" class="btn btn-sm btn-outline-light">
                                <i class="fas fa-list"></i> View All Claims
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Lecturer</th>
                                    <th>Month</th>
                                    <th>Hours</th>
                                    <th>Rate</th>
                                    <th>Total Amount</th>
                                    <th>Notes</th>
                                    <th>Document</th>
                                    <th>Submitted</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@claim.LecturerName</strong>
                                        </td>
                                        <td>@claim.Month</td>
                                        <td>@claim.HoursWorked</td>
                                        <td>@claim.HourlyRate.ToString("C")</td>
                                        <td>
                                            <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(claim.Notes))
                                            {
                                                <span class="text-truncate" style="max-width: 150px;"
                                                      title="@claim.Notes">@claim.Notes</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No notes</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(claim.DocumentUrl))
                                            {
                                                <a href="@claim.DocumentUrl" target="_blank"
                                                   class="btn btn-sm btn-outline-primary" title="View Document">
                                                    <i class="fas fa-file"></i> View
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No document</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@claim.CreatedDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <form method="post" asp-action="Approve" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@claim.Id" />
                                                    <button type="submit" class="btn btn-success"
                                                            title="Approve Claim" onclick="return confirm('Approve this claim?')">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="Reject" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@claim.Id" />
                                                    <button type="submit" class="btn btn-danger"
                                                            title="Reject Claim" onclick="return confirm('Reject this claim?')">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hero {
        background: url('/Images/coord view claims.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>