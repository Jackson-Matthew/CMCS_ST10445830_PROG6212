@model IEnumerable<CMCS_ST10445830.Models.Claim>

@{
    ViewData["Title"] = "Manage Approvals";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <h2 class="mb-4 text-center fw-bold text-white">Manage Lecturer Claims</h2>

        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer Notes</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.Id</td>
                                <td>@claim.Notes</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate</td>
                                <td>@(claim.HoursWorked* claim.HourlyRate)</td>
                                <td>
                                    @if (claim.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (claim.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (claim.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                </td>
                                <td>
                                    @if (claim.Status == "Pending")
                                    {
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                        </form>

                                        <form asp-action="Reject" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No actions</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-controller="Dashboard" asp-action="CoordinatorDashboard" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/coord view claims.jpg') no-repeat center center;
        background-size: cover;
    }
</style>