@model CMCS_ST10445830.Models.Upload

@{
    ViewData["Title"] = "Upload Supporting Document";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <h2 class="mb-4 text-white text-center">
            <i class="fas fa-upload"></i> Upload Supporting Document
        </h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-file-upload"></i> Submit Document
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (TempData["Message"] != null)
                        {
                            var messageType = TempData["MessageType"]?.ToString() ?? "success";
                            var alertClass = messageType == "success" ? "alert-success" : "alert-danger";

                            <div class="alert @alertClass alert-dismissible fade show">
                                @TempData["Message"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Index" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="form-group mb-4">
                                <label asp-for="File" class="form-label fw-bold"></label>
                                <input asp-for="File" type="file" class="form-control" />
                                <span asp-validation-for="File" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Maximum file size: 10MB. Allowed types: PDF, Word, Excel, JPG, PNG.
                                </small>
                            </div>

                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-upload"></i> Upload to Azure Storage
                            </button>
                            <a asp-controller="Dashboard" asp-action="LecturerDashboard" class="btn btn-secondary ms-2">
                                <i class="fas fa-home"></i> Back to Dashboard
                            </a>
                        </form>
                    </div>
                </div>

                <div class="mt-4">
                    <div class="alert alert-info shadow-sm">
                        <h6><i class="fas fa-info-circle"></i> Instructions:</h6>
                        <ul class="mb-0 text-start">
                            <li>Upload <strong>supporting documents</strong> related to your claim.</li>
                            <li>Accepted formats: PDF, Word, Excel, JPG, PNG.</li>
                            <li>Maximum file size: 10MB per file.</li>
                            <li>Files are securely stored in Azure Cloud Storage.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/claims bg.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        width: 100%;
        padding: 2rem 0;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}