@model IEnumerable<CMCS_ST10445830.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <h2 class="mb-4 text-center fw-bold text-white">My Claim Status</h2>

        <!-- Add success/error messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>Month</th>
                            <th>Hours Worked</th>
                            <th>Hourly Rate</th>
                            <th>Total</th>
                            <th>Notes</th>
                            <th>Document</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.Month</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.Notes</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(claim.DocumentUrl))
                                    {
                                        <a href="@claim.DocumentUrl" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No document</span>
                                    }
                                </td>
                                <td>
                                    @if (claim.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@claim.Status</span>
                                    }
                                    else if (claim.Status == "Approved")
                                    {
                                        <span class="badge bg-success">@claim.Status</span>
                                    }
                                    else if (claim.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">@claim.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@claim.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-controller="Dashboard" asp-action="LecturerDashboard" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/claims bg.jpg') no-repeat center center;
        background-size: cover;
    }
</style>