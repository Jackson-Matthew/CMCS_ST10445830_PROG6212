@model IEnumerable<CMCS_ST10445830.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <h2 class="mb-4 text-center fw-bold text-white">My Claim Status</h2>

        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>Claim ID</th>
                            <th>Hours Worked</th>
                            <th>Hourly Rate</th>
                            <th>Total</th>
                            <th>Notes</th>
                            <th>Date Submitted</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate</td>
                                    <td>@(claim.HoursWorked * claim.HourlyRate)</td>
                                    <td>@claim.Notes</td>
                                    
                                    <td>
                                    @if (claim.Status == "Pending")
                                    {
                                                <span class="badge bg-warning text-dark">@claim.Status</span>
                                    }
                                    else if (claim.Status == "Approved")
                                    {
                                                <span class="badge bg-primary">@claim.Status</span>
                                    }
                                    else if (claim.Status == "Paid")
                                    {
                                                <span class="badge bg-success">@claim.Status</span>
                                    }
                                    else
                                    {
                                                <span class="badge bg-secondary">@claim.Status</span>
                                    }
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/claims bg.jpg') no-repeat center center;
        background-size: cover;
    }
</style>
