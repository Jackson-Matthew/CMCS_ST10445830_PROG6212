@model Claim

@{
    ViewData["Title"] = "Submit a Claim";
}

<div class="hero d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <div class="row justify-content-center g-4">
            <!-- Form Card -->
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg border-0 p-4" style="background: rgba(255,255,255,0.9);">
                    <div class="card-body">
                        <h2 class="text-center mb-4 fw-bold text-success">Submit Your Claim</h2>

                        <form asp-action="Create" method="post">
                            <div class="mb-3">
                                <label asp-for="HoursWorked" class="form-label fw-medium"></label>
                                <input asp-for="HoursWorked" class="form-control rounded-3" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="HourlyRate" class="form-label fw-medium"></label>
                                <input asp-for="HourlyRate" class="form-control rounded-3" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label fw-medium"></label>
                                <textarea asp-for="Notes" rows="3" class="form-control rounded-3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100 rounded-3 fw-bold">
                                Submit Claim
                            </button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 col-md-8">
                <div class="card shadow-lg border-0 p-4" style="background: rgba(255,255,255,0.9);">
                    <div class="card-body">
                        <h4 class="fw-bold text-dark mb-3">📌 Instructions</h4>
                        <p class="text-muted">Please fill out the form to submit your claim. Ensure all information is accurate before submitting.</p>
                        <ul class="text-start">
                            <li>Enter the total hours that you have worked in the "Hours Worked" </li>
                            <li>Provide your hourly rate in the "Hourly Rate" field.<</li>
                            <li>Use the "Notes" section for any additional information regarding your claim.</li>
                        </ul>
                        <div class="alert alert-info mt-3">
                            <strong>Double check before submitting — claims can be submitted at any time.</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/Images/claims bg.jpg') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        width: 100%;
        padding: 2rem 0;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
